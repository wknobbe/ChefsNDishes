@{
    ViewData["Title"] = "Add Dish Page";
}
@using ChefsNDishes.Models
@model Dish

<h1>Add a Dish!</h1>
<a href="/dishes">Home</a>
<form asp-action="CreateDish" class="col-8 mx-auto" method="POST">
    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name">Name of Dish:</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span><br>
        <label asp-for="Calories">Number of Calories:</label>
        <input asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span><br>
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="ChefId"></span><br>
        <label asp-for="ChefId">Chef:</label>
        <select asp-for="ChefId" class="form-control">
            <option></option>
            @foreach (Chef chef in ViewBag.Chefs)
            {
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span><br>
        <label asp-for="Tastiness">Tastiness:</label>
        <select asp-for="Tastiness" class="form-control">
            <option></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <input type="submit" value="Add Dish" class="btn btn-primary">
</form>