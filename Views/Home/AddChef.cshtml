@{
    ViewData["Title"] = "Add Chef Page";
}
@model Chef

<h1>Add a Chef!</h1>
<a href="/">Home</a>
<form asp-action="CreateChef" class="col-8 mx-auto" method="POST">
    <div class="form-group">
        <span asp-validation-for="FirstName" class="text-danger"></span><br>
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName" class="text-danger"></span><br>
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span><br>
        <label asp-for="DateOfBirth">Date of Birth:</label>
        <input asp-for="DateOfBirth" class="form-control">
    </div>
    <input type="submit" value="Add Chef" class="btn btn-primary">
</form>

